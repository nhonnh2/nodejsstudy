<div class='m-4'>
  <h1>Khóa học của tôi</h1>
  <a href="/me/trash/courses">Thùng rác {{deleteCount}}</a>
  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>STT</th>
        <th scope='col'>Name</th>
        <th scope='col'>Level</th>
        <th scope='col'>Tác vụ</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope='row'>{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.level}}</td>
          <td>
            <a class='text-primary' href='/courses/{{this._id}}/edit'>Sửa</a>
            <a
              class='text-warning'
              data-toggle='modal'
              data-target='#delete-course'
              data-id='{{this._id}}'
            >Xóa</a>
          </td>
        </tr>
        {{else}}
        <tr>
          <td class="text-center" colspan='4'>bạn chưa đăng khóa học nào. <a href="/courses/create">đăng khóa học</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Modal -->
<div
  class='modal fade'
  id='delete-course'
  tabindex='-1'
  role='dialog'
  aria-labelledby='exampleModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='exampleModalLabel'>Xóa khóa học</h5>
        <button
          type='button'
          class='close'
          data-dismiss='modal'
          aria-label='Close'
        >
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        Bạn chắc chắn muốn xóa khóa học này ??
      </div>
      <div class='modal-footer'>

        <button
          type='button'
          id='btn-delete-course'
          class='btn btn-danger'
        >Xóa</button>
        <button
          type='button'
          class='btn btn-secondary'
          data-dismiss='modal'
        >Hủy</button>
      </div>
    </div>
  </div>
</div>
{{!-- delete hidden form --}}
<form method='post' name="delete-course-form"></form>
<script>
  //khi dom tải xong thì gọi vào callback function
  document.addEventListener("DOMContentLoaded",function(){
  let idCourse;
  let deleterForm=document.forms['delete-course-form'];
  $('#delete-course').on('show.bs.modal', function (event) { 
        const button=$(event.relatedTarget); // Button that triggered the modal var recipient =
        idCourse= button.data('id');
       console.log(idCourse); 
     });
       
        $("#btn-delete-course").click(function(){ 
          
          deleterForm.action=`/courses/${idCourse}?_method=DELETE`;
          deleterForm.submit();
        })
    }) ;
  
</script>