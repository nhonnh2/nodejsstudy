<div class='m-4'>
  <h1>Sửa khóa học</h1>
  {{#with course}}
    <form method='post' action='/courses/{{_id}}?_method=PUT'>
      <div class='form-group'>
        <label for='name'>Tên</label>
        <input
          type='text'
          class='form-control'
          id='name'
          name='name'
          value='{{name}}'
        />
      </div>
      <div class='form-group'>
        <label for='description'>Mô tả</label>
        <input
          name='description'
          type='text'
          class='form-control'
          id='description'
          value='{{description}}'
        />
      </div>
      <div class='form-group'>
        <label for='videoId'>videoId</label>
        <input
          name='videoId'
          type='text'
          class='form-control'
          id='videoId'
          value='{{videoId}}'
        />
      </div>
      <div class='form-group'>
        <label for='level'>level</label>
        <select name='level' class='form-control' id='level'>
          <option value='1'>1</option>
          <option value='2'>2</option>
        </select>
      </div>
      <button type='submit' class='btn btn-primary'>Lưu khóa học</button>
    </form>
  {{/with}}
</div>